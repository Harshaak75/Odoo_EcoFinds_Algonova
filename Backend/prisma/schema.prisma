generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email        String        @unique
  name         String?
  password     String
  roles        Role[]        @default([BUYER])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  RefreshToken RefreshToken?
  Product      Product[]
}

model RefreshToken {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @unique @db.Uuid
  tokenHash String // Hashed refresh token using bcrypt or SHA-256
  createdAt DateTime
  expiresAt DateTime // You can set expiry matching the refresh token
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  SELLER
  BUYER
}

// product name, description, price, quantity, imageUrl, createdAt, updatedAt, sku, tagname, keywords

model Product {
  id          String         @id @default(cuid())
  title       String
  description String
  price       Float
  category    Category
  images      ProductImage[]
  condition   Condition      @default(REFURBISHED)
  location    String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relation with User (seller who posted the product)
  sellerId String
  seller   User   @relation(fields: [sellerId], references: [id])
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

enum Category {
  ELECTRONICS
  FURNITURE
  VEHICLES
  STUDNET_ITEMS
  GAMING
  FASHION
  SERVICES
  OTHERS
}

enum Condition {
  NEW
  REFURBISHED
}
